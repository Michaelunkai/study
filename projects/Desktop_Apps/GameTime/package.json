{
  "name": "gametime",
  "version": "1.0.0",
  "description": "GameTime - See how much you've played and how much is left",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --dir"
  },
  "author": "GameTime",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.gametime.app",
    "productName": "GameTime",
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "GameTime.exe"
    }
  }
}

# TovPlay Backend Environment Template
# Copy to .env and fill in your values

# Application
FLASK_APP=wsgi:create_app
FLASK_ENV=development                       # Options: development, production
SECRET_KEY=change-me-to-secure-random-32-chars-minimum
JWT_SECRET_KEY=change-me-to-secure-random-32-chars-minimum
JWT_ALGORITHM=HS256

# Database (External PostgreSQL)
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_HOST=your-db-host
POSTGRES_PORT=5432
POSTGRES_DB=TovPlay
DATABASE_URL=postgresql://user:password@host:5432/TovPlay

# Email SMTP
EMAIL_SENDER=noreply@yourdomain.org
EMAIL_PASSWORD=your-smtp-password
SMTP_SERVER=your-smtp-server.com
SMTP_PORT=465

# URLs
WEBSITE_URL=http://localhost:3000           # Production: https://app.tovplay.org
APP_URL=http://localhost:3000               # Production: https://app.tovplay.org

# Security & CORS
ALLOWED_ORIGINS=http://localhost:3000       # Production: https://app.tovplay.org
RATE_LIMIT_PER_MINUTE=100                   # Production: 60
RATE_LIMIT_PER_HOUR=6000                    # Production: 3600
LOG_LEVEL=DEBUG                             # Production: WARNING
LOG_FORMAT=text

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
CLIENT_SECRET=your-discord-client-secret
DISCORD_USER_ID=
DISCORD_GUILD_ID=
DISCORD_PUBLIC_KEY=
DISCORD_TOKEN=
DISCORD_BOT_URL=
DISCORD_PERMISSIONS_INTEGER=
DISCORD_URL=https://discord.com
DISCORD_INVITE_LINK=https://discord.gg/your-invite
DISCORD_REDIRECT_URI=http://localhost:5001/api/discord/callback

# Redis (optional - falls back to memory)
REDIS_URL=memory://

# API Key (optional)
API_KEY=

# Testing
TEST_DATABASE_URL=sqlite:///:memory:

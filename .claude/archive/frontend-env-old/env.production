# TovPlay Frontend Production Environment Variables

# API Configuration
# NOTE: apiService.js adds /api automatically, so don't include it here
VITE_API_BASE_URL=https://app.tovplay.org
VITE_API_TIMEOUT=10000

# Environment
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=true

# WebSocket Configuration  
VITE_WS_URL=wss://app.tovplay.org/ws

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=true
# NOTE: This endpoint already has /api prefix since apiService isn't used for error reporting
VITE_ERROR_REPORTING_ENDPOINT=https://app.tovplay.org/api/errors

# Sentry Error Tracking
# Get your DSN from https://sentry.io after creating a frontend production project
VITE_SENTRY_DSN=
VITE_ENV=production
VITE_APP_VERSION=1.0.0

VITE_DISCORD_INVITE_LINK=https://discord.gg/7y7n2Nfq
# TovPlay Backend Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file with real credentials

# Application Environment
FLASK_APP=wsgi:create_app
FLASK_ENV=development
SECRET_KEY=your-flask-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# Database Configuration
POSTGRES_USER=your-postgres-username
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=TovPlay
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration
EMAIL_SENDER=noreply@yourdomain.com
EMAIL_PASSWORD=your-email-password
SMTP_SERVER=your.smtp.server.com
SMTP_PORT=465

# URLs
WEBSITE_URL_DEVELOPMENT=http://127.0.0.1:5001
WEBSITE_URL_STAGING=https://staging.yourdomain.com
WEBSITE_URL_PRODUCTION=https://yourdomain.com

# Application URL (for Discord OAuth redirects and frontend)
# Local: http://localhost:3000
# Staging: https://staging.tovplay.org
# Production: https://app.tovplay.org
APP_URL=http://localhost:3000

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your-discord-client-id
CLIENT_SECRET=your-discord-client-secret
DISCORD_USER_ID=your-discord-user-id
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_PUBLIC_KEY=your-discord-public-key
DISCORD_TOKEN=your-discord-bot-token
DISCORD_URL=https://discord.com
DISCORD_INVITE_LINK=https://discord.gg/your-invite-code
DISCORD_BOT_URL=https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=PERMISSIONS&integration_type=0&scope=bot
DISCORD_PERMISSIONS_INTEGER=your-permissions-integer

# Discord OAuth Redirect URI (ENVIRONMENT SPECIFIC!)
# Local: http://localhost:5000/api/discord/callback
# Staging: https://staging.tovplay.org/api/discord/callback
# Production: https://app.tovplay.org/api/discord/callback
DISCORD_REDIRECT_URI=http://localhost:5000/api/discord/callback

# API Keys and External Services
API_KEY=your-api-key-here

# Application version for release tracking in Sentry
APP_VERSION=1.0.0

# Testing
TEST_DATABASE_URL=sqlite:///:memory:

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
 cd && curl -fsS https://www.pgadmin.org/static/packages_pgadmin_org.pub | sudo gpg --dearmor -o /usr/share/keyrings/pgadmin.gpg && echo "deb [signed-by=/usr/share/keyrings/pgadmin.gpg] https://ftp.postgresql.org/pub/pgadmin/pgadmin4/apt/$(lsb_release -cs) pgadmin4 main" | sudo tee /etc/apt/sources.list.d/pgadmin4.list && sudo apt update && sudo apt install -y pgadmin4-web && sudo PGADMIN_SETUP_EMAIL='raz@tovtech.org' PGADMIN_SETUP_PASSWORD='CaptainForgotCreatureBreak' /usr/pgadmin4/bin/setup-web.sh --yes && echo '{"Servers":{"1":{"Name":"pythia-db","Group":"Servers","Host":"45.148.28.196","Port":5432,"MaintenanceDB":"pythia-db","Username":"raz@tovtech.org","SSLMode":"prefer"}}}' | sudo tee /var/lib/pgadmin/servers.json && echo "45.148.28.196:5432:pythia-db:raz@tovtech.org:CaptainForgotCreatureBreak" >> ~/.pgpass && chmod 600 ~/.pgpass && sudo systemctl start apache2

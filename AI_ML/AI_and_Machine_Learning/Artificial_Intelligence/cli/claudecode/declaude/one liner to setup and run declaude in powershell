irm https://katsujincode.github.io/DeClaude/ | Out-Null; Start-Process "https://katsujincode.github.io/DeClaude/"; function declaude { param([string]$profile = "DECLAUDE"); switch($profile) { "DECLAUDE" { & claude --allowedTools "Bash" --disallowedTools "Task,TaskOutput,KillShell,Read,Edit,Write,Glob,Grep,WebFetch,WebSearch,NotebookEdit,Skill,TodoWrite,AskUserQuestion,EnterPlanMode,ExitPlanMode,SlashCommand" $args }; "DEFCON1" { & claude $args }; "RESET" { & claude --allowedTools "Task,TaskOutput,Bash,KillShell,Read,Edit,Write,Glob,Grep,WebFetch,WebSearch,NotebookEdit,Skill,TodoWrite,AskUserQuestion,EnterPlanMode,ExitPlanMode,SlashCommand" --disallowedTools "" $args }; "CodeReview" { & claude --allowedTools "Read,Glob,Grep" --disallowedTools "Task,TaskOutput,Bash,KillShell,Edit,Write,WebFetch,WebSearch,NotebookEdit,Skill,TodoWrite,AskUserQuestion,EnterPlanMode,ExitPlanMode,SlashCommand" $args }; default { & claude --allowedTools "Bash" --disallowedTools "Task,TaskOutput,KillShell,Read,Edit,Write,Glob,Grep,WebFetch,WebSearch,NotebookEdit,Skill,TodoWrite,AskUserQuestion,EnterPlanMode,ExitPlanMode,SlashCommand" $args } } }; Write-Host "âœ… DeClaude installed! Use: declaude, declaude DEFCON1, declaude RESET, declaude CodeReview" -ForegroundColor Green


# TovPlay Frontend Environment Configuration
# Copy this file to .env and fill in your values
#
# USAGE:
# - Local Development: Copy as .env, use localhost backend URL
# - Production: Use production URLs/credentials
# - Staging: Use staging URLs/credentials

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
VITE_NODE_ENV=development  # Options: development, staging, production

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Local Development:
VITE_API_BASE_URL=http://localhost:5001
VITE_API_TIMEOUT=30000

# Production (uncomment for production):
# VITE_API_BASE_URL=https://app.tovplay.org
# VITE_API_TIMEOUT=10000

# Staging (uncomment for staging):
# VITE_API_BASE_URL=https://staging.tovplay.org/api
# VITE_API_TIMEOUT=30000

# ==============================================================================
# WEBSOCKET CONFIGURATION
# ==============================================================================
# Local Development:
VITE_WS_URL=http://localhost:5001

# Production (uncomment for production):
# VITE_WS_URL=wss://app.tovplay.org/ws

# Staging (uncomment for staging):
# VITE_WS_URL=ws://193.181.213.220:8001/ws

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Local Development:
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# Production (uncomment for production):
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_ANALYTICS=true

# ==============================================================================
# ERROR REPORTING
# ==============================================================================
# Local Development:
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_ENDPOINT=http://localhost:5001/api/errors

# Production (uncomment for production):
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_ERROR_REPORTING_ENDPOINT=https://app.tovplay.org/api/errors

# Staging (uncomment for staging):
# VITE_ENABLE_ERROR_REPORTING=true
# VITE_ERROR_REPORTING_ENDPOINT=http://193.181.213.220:8001/api/errors

# ==============================================================================
# SENTRY ERROR TRACKING (Optional)
# ==============================================================================
# Get your DSN from https://sentry.io after creating a project
VITE_SENTRY_DSN=
VITE_ENV=development
VITE_APP_VERSION=1.0.0

# ==============================================================================
# GOOGLE OAUTH (Optional)
# ==============================================================================
VITE_GOOGLE_CLIENT_ID=

# ==============================================================================
# DISCORD
# ==============================================================================
VITE_DISCORD_INVITE_LINK=https://discord.gg/7y7n2Nfq

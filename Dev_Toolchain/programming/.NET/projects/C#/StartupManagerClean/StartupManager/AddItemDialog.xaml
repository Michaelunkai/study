<Window x:Class="StartupManager.AddItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Add Startup Item"
        Width="500" Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ðŸ’¡ Just paste the full path below - name will auto-fill!" 
                   FontWeight="SemiBold" Foreground="LimeGreen" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Program Path: (PASTE HERE)" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="CommandBox" Grid.Column="0" Height="32" Margin="0,0,10,0"
                         ui:ControlHelper.PlaceholderText="Paste full path here (e.g., C:\Program Files\App\app.exe)"/>
                <Button Grid.Column="1" Content="Browse..." Width="80" Height="32" Click="Browse_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Name: (auto-filled)" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="NameBox" Height="32"
                     ui:ControlHelper.PlaceholderText="Auto-filled from path"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Height="34" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Add to Startup" Width="120" Height="34" Click="Add_Click" Style="{StaticResource AccentButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>

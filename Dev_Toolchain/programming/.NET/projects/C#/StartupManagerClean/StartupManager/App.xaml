<Application x:Class="StartupManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:StartupManager"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources RequestedTheme="Dark" />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            
            <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <local:LocationToModifiableConverter x:Key="LocationToModifiableConverter"/>
            <local:LocationToReadOnlyTextConverter x:Key="LocationToReadOnlyTextConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

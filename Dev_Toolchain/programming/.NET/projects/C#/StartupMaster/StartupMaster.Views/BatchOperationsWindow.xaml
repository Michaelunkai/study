<Window x:Class="StartupMaster.Views.BatchOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Batch Operations"
        Width="700" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Batch Operations" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Quick Actions">
                <StackPanel Margin="15">
                    <Button Content="Disable All Non-Critical Items" Height="40" Margin="0,0,0,10"/>
                    <Button Content="Enable All Items" Height="40" Margin="0,0,0,10"/>
                    <Button Content="Remove All Disabled Items" Height="40" Margin="0,0,0,10"/>
                    <Button Content="Reset All Delays to Zero" Height="40" Margin="0,0,0,10"/>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="High Impact Items">
                <ListBox x:Name="HighImpactList"/>
            </TabItem>
            
            <TabItem Header="Delayed Items">
                <ListBox x:Name="DelayList"/>
            </TabItem>
            
            <TabItem Header="Duplicates">
                <ListBox x:Name="DuplicatesList"/>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2" Content="Close" Width="100" Height="34" 
                HorizontalAlignment="Right" Margin="0,15,0,0" IsCancel="True"/>
    </Grid>
</Window>

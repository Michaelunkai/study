<Window x:Class="StartupMaster.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Startup Statistics"
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="System Statistics" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock x:Name="TotalItemsText" Text="Total Items: 0" Margin="0,5"/>
                    <TextBlock x:Name="EnabledText" Text="Enabled: 0" Margin="0,5"/>
                    <TextBlock x:Name="HighImpactText" Text="High Impact: 0" Margin="0,5"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="BootTimeText" Text="Estimated Boot Time: 0s" Margin="0,5"/>
                    <TextBlock x:Name="RatingText" Text="Rating: Good" Margin="0,5"/>
                    <TextBlock x:Name="RatingDescription" Text="" Margin="0,5" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="0,20,0,0">
            <TabItem Header="Locations">
                <ListBox x:Name="LocationList"/>
            </TabItem>
            <TabItem Header="Recommendations">
                <ListBox x:Name="RecommendationsList"/>
            </TabItem>
            <TabItem Header="High Impact">
                <DataGrid x:Name="HighImpactGrid" AutoGenerateColumns="True"/>
            </TabItem>
            <TabItem Header="Issues">
                <ListBox x:Name="IssuesList"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
